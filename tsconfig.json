{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2024",
    
    "declaration": true,
    "removeComments": true,
    
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    "moduleResolution": "node",
    
    "strict": true,
    "skipLibCheck": true,
    
    "sourceMap": true,
    "incremental": true,
    
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
  }
}
