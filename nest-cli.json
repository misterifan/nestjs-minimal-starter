{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": false,
  "sourceRoot": "src",
  "entryFile": "main",
  "language": "ts",
  "generateOptions": {
    "spec": false
  },
  "compilerOptions": {
    "tsConfigPath": "./tsconfig.build.json",
    "builder": "tsc",
    "webpack": false,
    "deleteOutDir": true,
    "assets": [
	    {
		    "include": "prisma/**/*.prisma",
		    "outDir": "dist/prisma"
		  },
		  {
        "include": "prisma/migrations/**/*",
        "outDir": "dist/prisma/migrations"
      }
    ],
    "watchAssets": false,
    "plugins": []
  }
}
